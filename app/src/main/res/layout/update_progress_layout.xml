<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/transparent"
    android:gravity="center"
    android:minHeight="240dp"
    android:minWidth="260dp">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="40dp"
        android:background="@drawable/shape_bg_white"
        android:layout_centerInParent="true"
        android:padding="10dp">

        <com.huantai.qhytims.view.NumberProgressBar
            android:id="@+id/number_progress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/update_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:textColor="@color/text_color_brown"
            android:text="新版本正在更新,请稍等"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/newVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="110dp"
            android:textSize="18sp"
            android:textColor="@color/text_normal"
            android:text="发现新版本 V3.2"
            android:textStyle="bold"
            android:visibility="visible"/>

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="马 上 升 级"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/shape_bg_submit"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/text_green"
            android:text="以后再说"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="272dp"
        android:layout_height="161dp"
        android:background="@mipmap/rocket"
        android:layout_gravity="center_horizontal"
        android:layout_above="@id/layout_top"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>